{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Copilot Suggestion Events Schema v1",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "event_type": {
      "type": "string",
      "const": "copilot.suggestion"
    },
    "payload": {
      "type": "object",
      "properties": {
        "symbol": { "type": "string" },
        "suggestion": { "type": "string" },
        "features": {
          "type": "object",
          "properties": {
            "cmin": { "type": "string", "pattern": "^\\d+(\\.\\d+)?$" },
            "cmax": { "type": "string", "pattern": "^\\d+(\\.\\d+)?$" },
            "vol_z": { "type": "string", "pattern": "^\\d+(\\.\\d+)?$" }
          },
          "additionalProperties": true
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "what_if": {
          "type": "object",
          "properties": {
            "qty": { "type": "string", "pattern": "^\\d+(\\.\\d+)?$" },
            "limit": { "type": "string", "pattern": "^\\d+(\\.\\d+)?$" },
            "delta_bp": { "type": "string", "pattern": "^-?\\d+(\\.\\d+)?$" },
            "est_fee": { "type": "string", "pattern": "^\\d+(\\.\\d+)?$" }
          },
          "required": ["qty", "limit", "delta_bp", "est_fee"],
          "additionalProperties": false
        },
        "guardrails": {
          "type": "object",
          "properties": {
            "max_pos_ok": { "type": "boolean" },
            "daily_loss_ok": { "type": "boolean" },
            "mkt_hours_ok": { "type": "boolean" }
          },
          "required": ["max_pos_ok", "daily_loss_ok", "mkt_hours_ok"],
          "additionalProperties": false
        }
      },
      "required": ["symbol", "suggestion", "features", "confidence", "what_if", "guardrails"],
      "additionalProperties": false
    }
  },
  "required": ["schema_version", "correlation_id", "timestamp", "event_type", "payload"],
  "additionalProperties": false
}
