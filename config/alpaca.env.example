# Alpaca API Configuration
# Get your keys from: https://app.alpaca.markets/paper/dashboard/overview

# Required: Your Alpaca API credentials
APCA_API_KEY_ID=your-alpaca-api-key-here
APCA_API_SECRET_KEY=your-alpaca-secret-key-here

# Alpaca API Endpoints
ALPACA_REST_URL=https://data.alpaca.markets/v2
ALPACA_WS_URL=wss://stream.data.alpaca.markets/v2/iex
ALPACA_TEST_WS_URL=wss://stream.data.alpaca.markets/v2/test

# Market Data Configuration
ALPACA_WATCHLIST=AAPL,MSFT,AMZN,TSLA,SPY,QQQ,NVDA,GOOGL,META,NFLX
ALPACA_MAX_SYMBOLS=30
ALPACA_UPDATE_INTERVAL_MS=1000

# Rate Limiting (Basic plan: ~200 req/min)
ALPACA_RATE_LIMIT_PER_MINUTE=200
ALPACA_RATE_LIMIT_PER_SECOND=3

# WebSocket Configuration
ALPACA_RECONNECT_DELAY_MS=5000
ALPACA_MAX_RECONNECT_ATTEMPTS=10
ALPACA_HEARTBEAT_INTERVAL_MS=30000

# Data Feed Selection
# For Basic plan, use "iex" (free)
# For higher plans, you can use "sip" (premium)
ALPACA_DATA_FEED=iex

# Paper Trading (recommended for development)
ALPACA_PAPER_TRADING=true